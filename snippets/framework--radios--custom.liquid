  data-js-class="Radios"
  data-is-swatches="{{ is_swatches }}"
>
{% if has_header %}
{%- comment -%}
<div class="radios--header">
    <label class="radios--option-label" data-item="accent-text" id="{{ radios_name }}">
      {{ option.name | escape }}
    </label>

    {% if is_swatches %}
      <span class="radios--option-current" data-item="light-accent-text">
        {% for value in option.values %}
          {% if value == option.selected_value %}
            {{ value | escape }}
          {% endif %}
        {% endfor %}
      </span>
    {% endif %}
</div>
{%- endcomment -%}
{% endif %}

  <div
    class="radios--container"
    role="radiogroup"
    aria-labelledby="{{ radios_name }}"
  >

  {% assign is_available = true %}
  {% if is_available %}
    {% for value in option.values %}

        <div class="radios--main">
          <input
            class="radios--input"
            type="radio"

            {% if view_grid %}
            id="{{ radios_name }}-{{ value | downcase | remove: ' ' }}-view_grid"
            {% else %}
            id="{{ radios_name }}-{{ value | downcase | remove: ' ' }}"
            {% endif %}

            name="{{ radios_name }}"
            value="{{ value | escape }}"
            data-item="radio"
            {% if value == option.selected_value %}
              checked
            {% endif %}
          />

          {% if is_swatches %}
            <label 
              {% if product_form %}
                class="radios--swatch-button-details {{ value }}"
              {% else %}
                class="radios--swatch-button {{ value }}"
              {% endif %}

              {% if view_grid %}
              for="{{ radios_name }}-{{ value | downcase | remove: ' ' }}-view_grid"
              {% else %}
              for="{{ radios_name }}-{{ value | downcase | remove: ' ' }}"
              {% endif %}
              aria-label="{{ value | escape }}"
            ></label>

          {% else %}
            <label
              class="radios--value-button"
              data-item="button"
              for="{{ radios_name }}-{{ value | downcase | remove: ' ' }}"
            >
              <div>{{ value | escape }}</div>
            </label>
          {% endif %}

        </div>

    {% endfor %}
  {% endif %}
  </div>
</div>

