{%- case bg_color -%}
  {%- when 'light' -%}
    background-color: #f7f7f7;
  {%- when 'dark' -%}
    background-color: #333333;
  {%- when 'accent' -%}
    background-color: {{ settings.color--accent }};
  {%- else -%}
    {%- break -%}
{%- endcase -%}

{%- case color -%}
  {%- when true -%}
    color: white;,
  {%- when false -%}
    color: black;
  {%- else -%}
    {%- break -%}
{%- endcase -%}

{%- case filter -%}
  {%- when true -%}
    filter: invert(1);
  {%- when false -%}
    color: black;
  {%- else -%}
    {%- break -%}
{%- endcase -%}