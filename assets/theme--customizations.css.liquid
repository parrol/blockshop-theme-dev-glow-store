/* VARIABLES*/
:root{
  --max-width: 1250px;
  --max-width-l: 1450px;
  --max-width-breadcrumbs: 1600px
}


/* Add your theme customizations below */
.header--root{
  margin: 0;
}

.header--top-row{
  width: 100%;
  margin-bottom: .5rem;
}

.header--bottom-row{
  background-color: var(--color-header-bottom-row-bg);
  padding-top: 0;
  padding-left: 32px;
  padding-right: 32px;
}

a.header--search{
  color: var(--color-header-search-icon);
  padding: 16px;
}

.header--search svg{
  color: var(--color-header-search-icon);
}

.icon--root icon--search{
  color: var(--color-header-search-icon);
}

.x-menu--level-1--link a{
  padding: 16px;
}

.header--cart {
  top: 0px;
}
a.header--cart-link{
  margin-right: 0;
}

.header--mobile .icon--menu{
  color: var(--color-header-open-left);
}

/*STICKY*/
/*This class allows the header to stop being fixed while scrolling inside the sidemenus*/
.section--header-sticky{
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 3;
}

/*FONT HEADER MENU*/
.font--header--menu {
  font-family: var(--font--header--menu--family);
  font-weight: var(--font--header--menu--weight);
  font-style: var(--font--header--menu--style);
  font-size: var(--font--header--menu--size) !important;
  text-transform: var(--font--header--menu--uppercase);
}

/* INFORMATION PANCAKES */

.pancakes-wrapper{
  max-width: var(--max-width);
  margin: 0 auto;
  }

.pancake-text--root{
  padding: 0rem 2rem 2rem 2rem;
}

.pancakes--title{
  padding-top: 2rem;
  padding-bottom: 3rem;
  font-size: 2.5rem;
}

.pancake--image {
  background-repeat: no-repeat;
  background-size: 50px;
  margin-bottom: 1rem;
  margin-top: 2rem;
  padding: 2rem;
}

.spark {
  background-image: url("./spark.svg");
}

.happiness {
  background-image: url("./happiness.svg");
}

.lipstick {
  background-image: url("./lipstick.svg");
}

.cherry {
  background-image: url("./cherry.svg");
}

.peach {
  background-image: url("./peach.svg");
}

.bunny {
  background-image: url("./cruelty-free.svg");
}

.pan-container{
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.pan-container--pancake{
  max-width: 400px;
}

@media only screen and (max-width: 937px) {
  .pan-container{
    justify-content: center;
  }
}

/*PRODUCTS*/
.product-grid--root {
  align-items: flex-end;
  padding: 3rem 8rem;
  max-width: 1800px;
  margin: 0 auto;
}

.product--root {
  max-width: 320px;
  padding: 10px;
}

.product--title {
  text-align: left;
  font-weight: bold;
}

.product--description {
  text-align: left;
  line-height: 1.1rem;
  color: var( --color-product-cards-description);
  padding-bottom: 1rem !important;
}

/* C.Parra - 20/01/2021 - Customization */
/* Added new description for product options on hover */

.hidden{
  display: none;
}

.reveal{
  display: block;
}

.product--color-image {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  display: flex;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  justify-content: center;
}

.product--details {
  padding: 1rem;
  background-color: var(--color-product-cards);
  min-height: 180px;
  display: flex;
  flex-direction: column;
}

/*This will override the rule of two items per row on "small" devices*/
@media only screen and (max-width: 460px) {
  .product-grid--root[data-mobile-items-per-row='2'] > * {
    width: calc(100%);
  }
}

@media only screen and (max-width: 950px) {
  .product--root{
    padding: 6px;
    max-width: none;
  }
}

.product-form--add-to-cart-preview {
  display: flex;
  justify-content: space-between;
  height: fit-content;
  background-color: white;
  width: 100%;
  border-radius: 5px;
  border: 1px solid var(--color-product-cards-border);
  box-sizing: border-box;
}

.product--form--select-variant {
  display: none;
}

.option-description__text{
  color: #898989;
  text-align: left;
}

.bold {
  font-weight: 500;
  color: #4c4c4c;
}

.product--select-variants{
  margin-top: auto;
}

.radios--container {

  padding: 5px 0px;
  border-radius: 2px;
}

.radios--container > *:not(:last-child) {
  padding-right: 4px;
}

.radios--main {
  padding-bottom: 5px;
}

.radios--swatch-button {
  height: 15px;
  width: 15px;
}

.November{
  background-image: url("./_glowstick-november.png");
}

.Foxtrot{
  background-image: url("./_glowstick-foxtrot.png");
}

.Tango{
  background-image: url("./_glowstick-tango.png");
}

.Charlie{
  background-image: url("./_glowstick-charlie.png");
}

.Romeo{
  background-image: url("./_glowstick-romeo.png");
}


.radios--swatch-button::after {
  height: 17px;
  width: 17px;
  top: -2px;
  left: -2px;
}

.product-recommendations--body--container {
  align-items: flex-end;
}

.cart--checkout-button button[disabled] .cart-button--text {
  display: block;
}

.product-form--smart-payment-buttons .shopify-payment-button__button--unbranded{
  display: none;
}

